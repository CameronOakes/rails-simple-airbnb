<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <p class="text-decoration-none"><%= link_to "Simple Airbnb", flats_path, :class => "text-decoration-none navbar-brand" %></p>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="bg-light mt-4 p-4 br-2 border-bottom">
        <h1><%= @flat.name %></h1>
        <p class="text-secondary"><%= @flat.address %></p>
      </div>
      <div class="bg-light mt-4 p-4 br-2 border-bottom">
        <h2>More info about this flat</h2>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-4">
      <div class="bg-light mt-4 p-4 br-2 border-bottom">
        <h3>Book this place!</h3>
        <form action="">
          <label>From</label>
          <input type="date">
          <label>To</label>
          <input type="date">
        </form>
      </div>
      <div class="bg-light mt-4 p-4 br-2 border-bottom">
        <h3>Details</h3>
        <p><%= @flat.price_per_night %> Pounds</p>
        <p><i class="fa-solid fa-person"></i> <%= @flat.number_of_guests %></p>
      </div>
    </div>
  </div>

</div>
