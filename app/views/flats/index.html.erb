<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid align-middle">
    <p><%= link_to "Simple Airbnb", flats_path, :class => "text-decoration-none navbar-brand align-middle" %></p>
    <a><%= link_to "New Flat", new_flat_path, :class => "btn btn-primary" %></a>
  </div>
</nav>

<div class="container">
  <div class="row">
    <% @flats.each do |f| %>
      <div class="col card m-3">
        <div class="card-body border mt-3">
          <h2><%= f.name %></h2>
          <p><%= f.address %></p>
          <p><i class="fa-solid fa-sterling-sign"></i> <%= f.price_per_night %></p>
          <p><i class="fa-solid fa-person"></i> <%= f.number_of_guests %></p>
        </div>
        <div class="flex">
          <p class="p-2"><%= link_to "More info", flat_path(f) %></p>
          <p class="p-2"><%= link_to "Edit flat", edit_flat_path(f) %></p>
          <p class="p-2"><%= link_to "Delete flat", flat_path(f),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
        </div>
      </div>
    <% end  %>
  </div>
</div>
